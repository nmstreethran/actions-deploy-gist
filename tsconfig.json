{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "target": "es2024",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "lib"
  }
}
